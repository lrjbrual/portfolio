<div class="section" id="carousel">
    <div class="container">
        <div class="row">
            <div class="col-md-12 ml-auto mr-auto">
                <div class="card page-carousel">
                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicator">
                            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="1" class=""></li>
                        </ol>
                        <div class="carousel-inner" role="listbox">
                        <div class="carousel-item active">
                            <%= image_tag 'antoine-barres.jpg', class: 'd-block img-fluid', alt: 'First slide' %>
                            <div class="carousel-caption d-none d-md-block">
                                <%= link_to blogs_path, class: 'btn btn-outline-info btn-round' do %>
                                    Learn More about the Blogs
                                <% end %>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <%= image_tag 'antoine-barres.jpg', class: 'd-block img-fluid', alt: 'First slide' %>
                            <div class="carousel-caption d-none d-md-block">
                                <%= link_to videos_path, class: "btn btn-outline-success btn-round" do %>
                                    Learn More about video tutorials
                                <% end %>
                            </div>
                        </div>
                        <a class="left carousel-control carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                            <span class="fa fa-angle-left"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="right carousel-control carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                            <span class="fa fa-angle-right"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>